@model IEnumerable<Mindhaven.Models.MoodLog>

@{
    ViewBag.Title = "Mood History";
    bool isAdmin = ViewBag.IsAdmin != null && (bool)ViewBag.IsAdmin;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Your Mood History</h2>
    <a href="/Support/HelpNow" class="btn btn-danger btn-sm">
        🆘 Need Help? Talk to Someone Now
    </a>
</div>

<p>
    @Html.ActionLink("Add New Entry", "Create", null, new { @class = "btn btn-primary" })
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered mt-3">
        <thead>
            <tr>
                <th>Mood Level</th>
                <th>Note</th>
                <th>Tag</th>
                <th>Logged At</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MoodLevel</td>
                    <td>@item.MoodNote</td>
                    <td>@item.MoodTag</td>
                    @if (item.LoggedAt.HasValue)
                    {
                        <td>@item.LoggedAt.Value.ToString("g")</td>
                    }
                    else
                    {
                        <td>-</td>
                    }
                    <td>@item.User.FullName</td>
                    <td>
                        @if (isAdmin)
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = item.MoodID }, new { @class = "btn btn-sm btn-outline-secondary me-1" })
                            @Html.ActionLink("Details", "Details", new { id = item.MoodID }, new { @class = "btn btn-sm btn-outline-info me-1" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.MoodID }, new { @class = "btn btn-sm btn-outline-danger" })
                        }
                        else
                        {
                            @Html.ActionLink("Details", "Details", new { id = item.MoodID }, new { @class = "btn btn-sm btn-outline-info me-1" })
                            @Html.ActionLink("Request Delete", "RequestDeletes", "DeleteRequests", new { itemType = "MoodLog", itemId = item.MoodID }, new { @class = "btn btn-sm btn-warning" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-4">
        No mood logs found. Start by adding your first mood entry.
    </div>
}
