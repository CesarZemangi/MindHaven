@model IEnumerable<Mindhaven.Models.TherapeuticHomework>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User1.FullName)
        </th>
        <th></th>
    </tr>
   

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>@item.AssignedDate?.ToShortDateString()</td>
            <td>@(item.DueDate?.ToShortDateString())</td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User1.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.HomeworkId }) |
                @Html.ActionLink("Details", "Details", new { id = item.HomeworkId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.HomeworkId })
                @Html.ActionLink("Submit Homework", "Create", "HomeworkSubmissions", new { homeworkId = item.HomeworkId }, new { @class = "btn btn-success btn-sm" })

            </td>
        </tr>
    }

</table>
