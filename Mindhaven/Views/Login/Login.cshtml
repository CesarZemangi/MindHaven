@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <style>
        :root {
            --primary-bg: rgba(255, 255, 255, 0.15);
            --primary-text: #000;
            --button-bg: #007BFF;
            --button-hover: #0056b3;
        }

        body.dark {
            --primary-bg: rgba(0, 0, 0, 0.35);
            --primary-text: #fff;
            --button-bg: #222;
            --button-hover: #444;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        html, body {
            height: 100%;
            overflow: hidden;
        }

        .background {
            background:  url('@Url.Content("~/template/img/mind4.png")') no-repeat center center ;

            position: absolute;
            width: 100%;
            height: 100%;
            z-index: -1;
            animation: zoomIn 20s ease-in-out infinite alternate;
        }

        @@keyframes zoomIn {
            from { transform: scale(1); }
            to { transform: scale(1.1); }
        }

        .login-container {
            background: var(--primary-bg);
            backdrop-filter: blur(10px);
            padding: 30px;
            border-radius: 16px;
            width: 100%;
            max-width: 360px;
            margin: auto;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            text-align: center;
            color: var(--primary-text);
            animation: fadeIn 1s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        h2 {
            margin-bottom: 20px;
        }

        .input-group {
            text-align: left;
            margin-bottom: 15px;
        }

        .input-group label {
            font-size: 14px;
            margin-bottom: 5px;
            display: block;
        }

        .input-group input {
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        button {
            width: 100%;
            padding: 12px;
            background: var(--button-bg);
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            margin-top: 10px;
        }

        button:hover {
            background: var(--button-hover);
        }

        .register-link {
            margin-top: 12px;
            font-size: 14px;
        }

        .register-link a {
            color: var(--primary-text);
            text-decoration: none;
        }

        .register-link a:hover {
            text-decoration: underline;
        }

        .icon {
            font-size: 40px;
            margin-bottom: 15px;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.1); opacity: 0.8; }
            100% { transform: scale(1); opacity: 1; }
        }

        .theme-toggle {
            position: absolute;
            top: 15px;
            right: 15px;
            background: #fff3;
            padding: 8px 12px;
            border-radius: 10px;
            cursor: pointer;
            color: white;
            font-size: 14px;
            user-select: none;
            z-index: 10;
        }

        body.dark .theme-toggle {
            background: #0006;
        }
    </style>
</head>
<body class="light">

    <div class="background"></div>

    <div class="theme-toggle" onclick="toggleTheme()">🌙 Toggle Theme</div>

    <div class="login-container">
        <div class="icon">🔐</div>
        <h2>Login</h2>
        <form action="@Url.Action("Login2", "Login")" method="POST">

            <div class="input-group">
                <label for="UserID">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Login</button>
        </form>
        <p class="register-link">Don't have an account? <a href="@Url.Action("Register", "Users")">Register</a>

</div>

    <script>
        function toggleTheme() {
            document.body.classList.toggle("dark");
        }
    </script>

</body>
</html>
