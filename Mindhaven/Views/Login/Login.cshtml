@model Mindhaven.Models.User
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@section Styles {
    <style>
        .lock-icon {
            font-size: 60px;
            text-align: center;
            margin-bottom: 8px;
        }

        .auth-title {
            text-align: center;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .auth-input {
            margin-bottom: 14px;
        }

        .auth-btn {
            width: 100%;
            background: #006BFF;
            color: white;
            border: none;
            padding: 11px;
            font-size: 17px;
            border-radius: 6px;
            transition: 0.3s;
        }

            .auth-btn:hover {
                background: #034fc0;
            }
    </style>
}

<div>
    <div class="lock-icon">🔐</div>
    <h2 class="auth-title">Login</h2>

    @using (Html.BeginForm("Login2", "Login", FormMethod.Get))
    {
        <div class="auth-input">
            @Html.Label("Username")
            @Html.TextBox("username", "", new { @class = "form-control", placeholder = "Your email" })
        </div>

        <div class="auth-input">
            @Html.Label("Password")
            @Html.Password("password", "", new { @class = "form-control", placeholder = "Enter password" })
        </div>

        <button class="auth-btn" type="submit">Login</button>
    }

    <p style="text-align:center; margin-top:15px;">
        Don't have an account?
        @Html.ActionLink("Register", "Register", "Users")
    </p>

    @if (ViewBag.Error != null)
    {
        <p style="color:red; text-align:center; margin-top:10px;">@ViewBag.Error</p>
    }
</div>
