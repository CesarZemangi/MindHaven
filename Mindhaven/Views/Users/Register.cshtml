@model Mindhaven.Models.User

@{
        Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


@section Styles {
    <!-- Custom styles for register animation -->
    <style>
        

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .auth-title {
            text-align: center;
            margin-bottom: 20px;
            color: #004aad;
            font-size: 26px;
            font-weight: 600;
        }

        .auth-btn {
            width: 100%;
            background: #004aad;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            transition: 0.3s;
        }

            .auth-btn:hover {
                background: #003a86;
            }

        .auth-input {
            margin-bottom: 15px;
        }
    </style>
}

<div class="auth-container">

    <!-- Page title -->
    <h2 class="auth-title">Create Account</h2>

    <!-- Form start -->
    @using (Html.BeginForm("Register", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <!-- Full Name -->
        @* Store full name *@
        <div class="auth-input">
            @Html.LabelFor(m => m.FullName)
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Your full name" })
            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
        </div>

        <!-- Email -->
        @* Store email *@
        <div class="auth-input">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <!-- Password -->
        @* Store password hash *@
        <div class="auth-input">
            @Html.LabelFor(m => m.PasswordHash)
            @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", placeholder = "Create a password" })
            @Html.ValidationMessageFor(m => m.PasswordHash, "", new { @class = "text-danger" })
        </div>

        <!-- Button -->
        <button type="submit" class="auth-btn">Register</button>
    }

    <!-- Redirect link -->
    <p style="text-align:center; margin-top:15px;">
        Already have an account?
        @Html.ActionLink("Login", "Login", "Login")
    </p>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
